# Django Settings
DJANGO_DEBUG=1
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Default Database Configuration
POSTGRES_DB=geograph_data
POSTGRES_USER=geograph
POSTGRES_PASSWORD=geograph
POSTGRES_HOST=localhost
POSTGRES_PORT=5434

# Datastore Database Configuration
POSTGRES_DB_DATASTORE=geograph_layer
POSTGRES_USER_DATASTORE=geograph
POSTGRES_PASSWORD_DATASTORE=geograph
POSTGRES_HOST_DATASTORE=localhost
POSTGRES_PORT_DATASTORE=5434

# GDAL/GEOS Configuration
GDAL_LIBRARY_PATH=/usr/lib/x86_64-linux-gnu/libgdal.so
GEOS_LIBRARY_PATH=/usr/lib/x86_64-linux-gnu/libgeos_c.so
PROJ_LIBRARY_PATH=/usr/lib/x86_64-linux-gnu/libproj.so

# GeoServer Configuration (if using)
GEOSERVER_URL=http://localhost:8080/geoserver
GEOSERVER_USERNAME=admin
GEOSERVER_PASSWORD=geoserver
GEOSERVER_WORKSPACE=geograph
GEOSERVER_DATASTORE=geograph_datastore

# API Configuration
API_BASE_URL=http://localhost:8000/api/
VITE_API_BASE_URL=http://localhost:8000/api/

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/django.log

# Static Files
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# Security (for production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY
